<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/park_list"
            android:background="@drawable/background_park"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:clickable="true">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Danh sách bãi gửi xe"
                android:layout_alignParentEnd="true"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAlignment="center"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/car_list"
            android:background="@drawable/background_car"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:clickable="true">
            <TextView
                android:layout_width="90dp"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:textStyle="bold"
                android:text="Danh sách xe"
                android:textAlignment="center"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/sale_list"
            android:background="@drawable/background_sale"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:clickable="true">
            <TextView
                android:layout_width="90dp"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Danh sách khuyến mãi"
                android:textAlignment="center"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/reveneu_list"
            android:background="@drawable/background_reveneu"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:clickable="true">
            <TextView
                android:layout_width="90dp"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Doanh thu"
                android:textAlignment="center"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/analyst_list"
            android:background="@drawable/background_analyst"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:clickable="true">
            <TextView
                android:layout_width="90dp"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:textStyle="bold"
                android:text="Quản lý nhân viên"
                android:textAlignment="center"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>